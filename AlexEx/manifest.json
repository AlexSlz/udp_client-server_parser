{
  "name": "AlexEx",
  "version": "6.6.6",
  "description": "Alexander Seleznev",
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "19": "19.png",
      "38": "76.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["index.js"],
      "css": ["style.css"]
    }
  ],
  "icons": {
    "128": "128.png"
  },
  "permissions": ["storage", "serial", "tabs", "activeTab"],
  "manifest_version": 2,
  "minimum_chrome_version": "23"
}
